					li
						a.facebook(href='//www.facebook.com/share.php?u=http://www.seiyu.co.jp/campaign/features/', onclick="ga('send', 'event', 'Campaign', 'SNSbtnFb', 'features');", target='_blank')
							span facebook
					li
						a.twitter(href='//twitter.com/share?url=http://www.seiyu.co.jp/campaign/features/&related=Seiyu_Japan&hashtags=%e3%82%aa%e3%82%b9%e3%82%b9%e3%83%a1%e5%95%86%e5%93%81%e7%99%ba%e6%8e%98%e3%81%97%e9%9a%8a%ef%bc%81%20%23SEIYU', onclick="ga('send', 'event', 'Campaign', 'SNSbtnTw', 'features');", target='_blank')
