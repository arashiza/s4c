block osusume_content
	#contents(class="#{current}")
		header#content-header
			p.label
				img(src='img/header_label.png', alt='SEIYUのオススメ商品発掘し隊！ Vol.1')
			h1
				img(src='img/header_title.png', alt='Old Spice（オールドスパイス）ボディウォッシュがSEIYUなら全品各698円（税抜）でオススメ！')
			figure.item
				img(src='img/header_img.png', alt='')
