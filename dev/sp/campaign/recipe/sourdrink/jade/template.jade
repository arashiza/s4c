		title #{title}
		meta(name='description', content="お酢とフルーツでお手軽に作れる、彩り豊かでさわやかなサワードリンクレシピをご紹介します。")
		meta(name='keywords', content="お酢,サワードリンク,ビネガー,フルーツ,フルーツ酢,ビネガーウォーター,スムージー,レシピ,料理,SEIYU,西友,LIVIN,リヴィン,SUNNY,サニー,Walmart,ウォルマート")
		meta(property='og:title', content="西友 – おうちで作れるさわやかサワードリンクレシピ | SEIYU")
		meta(property='og:url', content='#{og_url}')
		meta(property='og:image', content='http://www.seiyu.co.jp/sp/campaign/recipe/'+'#{thisRecipe}'+'/img/sns.jpg')
